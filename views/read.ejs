<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Backend</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full h-full bg-zinc-900 text-white p-10">

        <div  class="nav mb-10">
            <a class="text-zinc-400" href="/">Back to home</a>
        </div>

        <h1 class="text-3xl tracking-tighter mb-3">All Users</h1>
        <div class="users flex gap-3 flex-wrap">
            <% users.forEach(function (user) {%>
                <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                    <div class="w-full h-52 rounded-lg bg-red-500">
                        <img class="w-full h-full" src="<%= user.image %>" alt="image">
                    </div>
                    <h3 class="text-xl mt-3 tracking-tighter"><%= user.name %></h3>
                    <h5 class="text-zinc-500"><%= user.email %></h5>
                    <div class="flex gap-3 mt-5">
                        <a class="text-blue-400" href="/edit/<%= user._id %>">Edit User</a>
                        <a class="text-blue-400" href="/delete/<%= user._id %>">Delete User</a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body> 
</html>
